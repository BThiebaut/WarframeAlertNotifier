<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    >

    <TextView
        android:id="@+id/txt_alert_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alert Title"
        android:textStyle="bold"
        />
    <TextView
        android:id="@+id/txt_alert_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Alert dec"
        app:layout_constraintTop_toBottomOf="@id/txt_alert_title"
        />
    <TextView
        android:id="@+id/txt_alert_reward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alert reward"
        app:layout_constraintTop_toBottomOf="@id/txt_alert_title"
        app:layout_constraintRight_toRightOf="parent"
        />

</android.support.constraint.ConstraintLayout>